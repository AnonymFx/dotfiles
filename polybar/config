;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = #0000000
background-highlight = #ffffff
foreground = #dfdfdf
foreground-alt = #949494
underline=#00ffffff
alert = #da4141

[bar/basebar]
width = 100%
height = 40
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

tray-position = right
tray-detached = true
tray-offset-y = 30
tray-maxsize = 10
tray-scale = 0.8

font-0 = droidsansmono:pixelsize=10;1
font-1 = ArimoNerdFontMono:pixelsize=11;1
font-2 = d2coding:pixelsize=12;1
font-4 = siji:pixelsize=10;1

[bar/primarybar]
inherit = bar/basebar
monitor = ${env:MONITOR}

modules-left = i3
modules-center = music
modules-right = volume xbacklight vpncheck wlan eth filesystem memory cpu temperature battery date powermenu

[bar/secondarybar]
inherit = bar/basebar
monitor = ${env:MONITOR}

modules-left = i3
modules-center =
modules-right = xbacklight date

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-underline = ${colors.underline}

label-layout = %layout%
label-layout-underline = ${colors.underline}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.foreground-alt}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{A1: baobab:}%mountpoint%%{F-}: %percentage_used%%%{A}
label-mounted-underline = ${colors.underline}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
label-unmounted-underline = ${colors.underline}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
ws-icon-0=1;
ws-icon-1=2;
ws-icon-2=3;
ws-icon-3=4;
ws-icon-4=5;
ws-icon-5=6;
ws-icon-6=7;
ws-icon-7=8;
ws-icon-8=9;
ws-icon-9=10;

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-background = ${colors.foreground}
label-mode-foreground = #000000

; focused = Active workspace on focused monitor
label-focused = "%icon%"
label-focused-foreground = #000000
label-focused-background = ${colors.background-highlight}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-foreground = ${self.label-focused-foreground}
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/xbacklight]
type = internal/xbacklight

format = <label>
format-underline = ${colors.underline}
label =  %percentage:3:3%%

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = ""
format-underline = ${colors.underline}
label = %{A1: terminator -e htop:}%percentage:3:3%%%{A}

[module/memory]
type = internal/memory
interval = 2
format-prefix = ""
format-underline = ${colors.underline}
label = %{A1: terminator -e htop:}%percentage_used:3:3%%%{A}

[module/wlan]
type = internal/network
interface = ${env:WLAN}
interval = 1

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-underline = ${colors.underline}
label-connected = %{A1: XDG_CURRENT_DESKTOP=GNOME gnome-control-center network&:}%essid:0:16:...%%{A}

format-disconnected =

[module/eth]
type = internal/network
interface = ${env:ETH}
interval = 1

format-connected-underline = ${colors.underline}
label-connected = %{A1: XDG_CURRENT_DESKTOP=GNOME gnome-control-center network&:}%{A}

format-disconnected =

[module/date]
type = internal/date
interval = 1

date = "%Y-%m-%d"
time = %H:%M

label = %date% %time%
format-underline = ${colors.underline}

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colors.underline}
label-volume-foreground = ${root.foreground}
label-volume = %percentage:3:3%%

format-muted-prefix = " "
format-muted-underline = ${colors.underline}
format-muted-foreground = ${colors.foreground-alt}
label-muted = muted

ramp-volume-0 = 
ramp-volume-1 = 

[module/battery]
type = internal/battery
battery = ${env:BAT}
adapter = ${env:BAT_ADP}
full-at = 95

format-charging = <label-charging>
label-charging =  %percentage%%
format-charging-underline = ${colors.underline}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%
format-discharging-underline = ${colors.underline}

label-full =  %percentage%%
format-full-underline = ${colors.underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80

format = <ramp> <label>
format-underline = ${colors.underline}
label = %temperature%

format-warn = <label-warn>
format-warn-underline = ${colors.underline}
label-warn =  %temperature%
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

[module/powermenu]
type = custom/menu
label-padding = 1

label-open = " "
label-close = cancel
label-close-foreground = ${colors.foreground-alt}
label-separator = " | "
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = hibernate
menu-0-0-exec = menu-open-1
menu-0-1 = shutdown
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = hibernate
menu-1-1-exec = systemctl hibernate

menu-2-0 = shutdown
menu-2-0-exec = systemctl poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/vpncheck]
type = custom/script
exec = pgrep openvpn
interval = 5
label = vpn
format-underline = ${colors.underline}
format-prefix = " "

[module/music]
type = custom/script
interval=1
format-underline = ${colors.underline}
exec=$HOME/.config/polybar/gpm.sh 39

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
